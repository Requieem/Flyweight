{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 1
    },
    "configurePresets": [
      {
        "name": "default",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/build/${presetName}",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_CXX_STANDARD": "20",
          "CMAKE_OSX_ARCHITECTURES": "x86_64"
        }
      },
      {
        "name": "macos",
        "inherits": "default",
        "description": "Build for macOS with default settings",
        "hidden": false
      }
    ],
    "buildPresets": [
      {
        "name": "default",
        "hidden": true,
        "configuration": "Debug"
      },
      {
        "name": "macos",
        "inherits": "default",
        "description": "Build for macOS with default settings",
        "jobs": 4,
        "configuration": "Debug"
      }
    ],
    "testPresets": [
      {
        "name": "default",
        "hidden": true,
        "configuration": "Debug"
      },
      {
        "name": "macos",
        "inherits": "default",
        "description": "Test for macOS with default settings"
      }
    ]
  }